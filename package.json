{
    "name": "wapidi",
    "description": "A lightweight web api framework with depenedency injection for Typescript and express.js projects",
    "version": "0.6.2",
    "exports": {
        ".": "./dist/index.js",
        "./container": "./dist/container.js",
        "./decorators": "./dist/decorators.js",
        "./server": "./dist/server.js",
        "./InjectionToken": "./dist/InjectionToken.js",
        "./errors": "./dist/errors.js",
        "./types": "./dist/types.js"
    },
    "types": "./dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "watch": "npm run build -- -w",
        "prebuild:tests": "rimraf test",
        "build:tests": "tsc --project tests",
        "pretest": "npm run build:tests",
        "watch:tests": "npm run build:tests -- -w",
        "test": "node --test"
    },
    "keywords": [
        "express",
        "typescript",
        "javascript",
        "node",
        "api",
        "dependency injection",
        "container",
        "di",
        "ioc",
        "express.js",
        "framework"
    ],
    "author": "Attila Kling <attila.kling@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/jim-y/wapidi.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^5.0.0",
        "rimraf": "^6.0.1"
    },
    "peerDependencies": {
        "express": "^4.21.2",
        "typescript": "^5.7.3"
    },
    "peerDependenciesMeta": {
        "express": {
            "optional": true
        }
    }
}
